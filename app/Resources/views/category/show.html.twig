{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>
    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('app_category_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-success" href="{{ path('app_category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ category.description }}</td>
        </tr>
        </tbody>
    </table>
    {{ render(controller('AppBundle:Post:index',{ 'categoryId': category.id })) }}


{% endblock %}
