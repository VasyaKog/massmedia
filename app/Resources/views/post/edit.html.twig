{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.content) }}
        {{ form_widget(edit_form.content,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.file) }}
        {{ form_widget(edit_form.file,{'attr':{'class':'form-control'}}) }}
    </div>
    <input class="btn btn-primary" type="submit" value="Edit"/>
    {{ form_end(edit_form) }}

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-default" href="{{ path('app_category_show',{'id':post.category.id}) }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
